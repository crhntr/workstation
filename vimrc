" Syntax highlighting FTW
syntax on

" Setting Spacing and Indent (plus line no)
set number
set tabstop=2 shiftwidth=2 expandtab
filetype plugin indent on
set ts=2
set nowrap
set backspace=2

" enable mouse scrolling
set mouse=nicr

" Swp files go to their hole
set backup
set backupdir=/tmp
set backupskip=/tmp/*
set directory=/tmp
set writebackup